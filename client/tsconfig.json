{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~types": ["src/types/EXPORT.ts"],
      "~components": ["src/components/EXPORT.ts"],
      "~config": ["src/config/EXPORT.ts"],
      "~company": ["src/company/EXPORT.ts"],
      "~employee": ["src/employee/EXPORT.ts"],
      "~providers": ["src/providers/EXPORT.ts"],
      "~hooks": ["src/hooks/EXPORT.ts"],
      "~mocks": ["src/mocks/EXPORT.ts"],
      "~api": ["src/api/EXPORT.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["tsconfig.node.json"]
}
